      cursor: pointer;
      border-radius: 5px;
    }

    .cart {
      background: rgba(255, 255, 255, 0.95);
      padding: 20px;
      margin: 20px auto;
      border: 1px solid #ccc;
      width: 300px;
      box-shadow: 0 4px 8px rgba(0,0,0,0.2);
    }

    .cart h2 {
      margin-top: 0;
    }

    .cart-item {
      display: flex;
      justify-content: space-between;
      margin-bottom: 10px;
    }

    .checkout-btn {
      background: #007BFF;
